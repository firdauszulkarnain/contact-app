<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4">
            <% if(!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Kontak Tidak Ditemukan!. <a href="/contact" class="alert-link">Kembali</a>
                  </div>
            <% } else {  %>
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                          <h5 class="card-title"><%= contact.nama  %></h5>
                          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp  %></h6>
                          <p class="card-text"><%= contact.email  %></p>
                          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-sm btn-info">Ubah</a>
                          <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                            <input type="hidden" name="nama" value="<%= contact.nama %>">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="confirm('Yakin Hapus Data?')">Hapus</button>
                          </form>
                          <a href="/contact" class="card-link d-block mt-3">Kembali</a>
                        </div>
                      </div>
                </div>
            <% } %>
        </div>
    </div>
</div>